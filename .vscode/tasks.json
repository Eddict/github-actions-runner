{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create runner layout",
            "detail": "Build and Copy all projects, scripts and external dependencies to _layout from src (run this the first time or after deleting _layout)",
            "command": "./dev.sh",
            "windows": {
                "command": "dev.cmd"
            },
            "args": [
                "layout"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "build runner layout",
            "detail": "Build and Copy all projects to _layout from src (run this on code change)",
            "command": "./dev.sh",
            "windows": {
                "command": "dev.cmd"
            },
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "type": "dotnet",
            "task": "build Debug",
            "group": "build",
            "problemMatcher": [ "$msCompile" ],
            "label": "dotnet: build"
        },
        {
            "type": "dotnet",
            "task": "test Debug",
            "group": "test",
            "problemMatcher": [ "$msCompile" ],
            "label": "dotnet: test (Debug)"
        },
        {
            "type": "dotnet",
            "task": "test Release",
            "group": "test",
            "problemMatcher": [ "$msCompile" ],
            "label": "dotnet: test (Release)"
        },
        {
            "type": "dotnet",
            "task": "build Debug",
            "group": "build",
            "problemMatcher": [ "$msCompile" ],
            "label": "dotnet: build (Debug)"
        },
        {
            "type": "dotnet",
            "task": "build Release",
            "group": "build",
            "problemMatcher": [ "$msCompile" ],
            "label": "dotnet: build (Release)"
        }
    ]
}